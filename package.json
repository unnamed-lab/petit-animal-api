{
  "name": "petit-api-server",
  "version": "1.0.0",
  "description": "A simple Express server using MVC pattern",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "pnpm tsx src/server.ts",
    "dev": "nodemon --watch src --ext ts --exec \"tsx src/server.ts\"",
    "build": "tsc"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "marked": "^5.1.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/marked": "^5.0.0",
    "@types/node": "^22.10.2",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
